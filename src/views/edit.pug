extends base
include mixins/video
block content   
    h3 Change Title of #{video.title}
     form(method="POST") 
        input(name="title", type="text", placeholders="Video Title", value=`${video.title}`,required)
        input(name="description", type="text", placeholder="description", value=video.description, required) 
        input(name="hashtags", type="text", placeholder="hashtags seperated by comma.", value=video.hashtags.join(), required) 
        input(type="submit", value="Save")
                    
     