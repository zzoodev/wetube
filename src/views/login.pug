extends base.pug

block content   
    if errorMessage
        span=errorMessage
    form(method="POST")
        h4=pagetitle
        input(type="text", name="username", placeholder="Username" required)
        input(type="password", name="password", placeholder="Password" required)
        input.post_button(type="submit", value="LOGIN") 
        div.divide_line
        a.github_login(href="/users/github/start") Login with github &rarr;
        div.other_method
            span Don't you have a acount? 
            a(href="/join") JOIN 
        
